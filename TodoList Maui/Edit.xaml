<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoList_Maui.Edit"
             Title="Edit">
    <VerticalStackLayout>
        <Button Clicked="OnToMainPage"
                Text="Main Page"
                HorizontalOptions="Fill"/>
        <Entry x:Name="Name"
               FontSize="24"/>
        <Entry x:Name="Description"
               FontSize="24"
               HeightRequest="200"/>
        <Switch x:Name="Status" 
                IsToggled="false"/>
        <Picker x:Name="CategoryPicker"
                FontSize="24"/>
        <Button Clicked="OnSubmit"
                Text="Submit"
                HorizontalOptions="End"/>
    </VerticalStackLayout>
</ContentPage>